
{
  "private": true,
  "name": "smc",
  "description": "Smart Medication Cart Version 1",
  "version": "1.0.0",
  "author": "Nonthasak.l <nonthasak.l@gmail.com>",
  "main": "app/background.js",
  "scripts": {
    "dev": "nextron",
    "build": "nextron build",
    "build:linux": "nextron build --linux",
    "build:win63": "nextron build --win --x64",
    "postinstall": "electron-builder install-app-deps"
  },
  "build": {
    "linux": {
      "synopsis": "SMC",
      "description": "SMC",
      "category": "SMC",
      "target": [
        {
          "target": "AppImage",
          "arch": [
            "arm64",
            "armv7l"
          ]
        }
      ]
    },
    "publish": null,
    "extraResources": [
      {
        "from": "resources/db/database.db",
        "to": "db/database.db"
      }
    ]
  },
  "dependencies": {
    "@headlessui/react": "^1.7.15",
    "@serialport/parser-byte-length": "^12.0.0",
    "@serialport/parser-packet-length": "^12.0.0",
    "axios": "^1.4.0",
    "daisyui": "^3.7.4",
    "dotenv": "^16.3.1",
    "electron-serve": "^1.1.0",
    "electron-store": "^8.1.0",
    "framer-motion": "^10.12.16",
    "mqtt": "^5.0.5",
    "react-hook-form": "^7.44.3",
    "react-icons": "^4.9.0",
    "react-toastify": "^9.1.3",
    "sequelize": "^6.37.3",
    "serialport": "^12.0.0",
    "sqlite3": "^5.1.6",
    "ts-node": "^10.9.1",
    "typescript": "^5.1.6"
  },
  "devDependencies": {
    "@types/node": "^18.11.18",
    "@types/react": "^18.0.26",
    "@types/react-dom": "^18.2.5",
    "autoprefixer": "^10.4.7",
    "electron": "^21.3.3",
    "electron-builder": "^23.6.0",
    "next": "^12.3.4",
    "nextron": "^8.5.0",
    "postcss": "^8.4.13",
    "react": "^18.2.0",
    "react-dom": "^18.2.0",
    "tailwindcss": "^3.1.8"
  }
}